@model IEnumerable<CLDV_POE.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container my-5" style="background-color: #f5f5f5; padding: 30px; border-radius: 12px;">
    <h1 class="text-center mb-4" style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-weight: 300; color: #111;">Customers</h1>

    <div class="text-center mb-4">
        <a asp-action="Add_Customer" class="btn btn-primary animated-btn">
            <i class="fa fa-plus me-2"></i> Add New Customer
        </a>
    </div>

    <style>
        .animated-btn {
            background-color: #0071e3;
            border: none;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 500;
            font-size: 16px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
            display: inline-block;
        }

            .animated-btn:hover {
                background-color: #005bb5;
                transform: translateY(-3px) scale(1.05);
                box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            }

            .animated-btn:active {
                transform: translateY(0) scale(0.98);
                box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            }
    </style>


    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var customer in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm" style="border-radius: 12px; background-color: #eaeaea; transition: transform 0.2s; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;">
                    <div class="card-body">
                        <h5 class="card-title" style="font-weight: 500; color: #111;">
                            @customer.Customer_Name
                        </h5>
                        <p class="card-text text-muted">
                            @customer.email
                        </p>
                    </div>
                    <div class="card-footer bg-light border-0 d-flex justify-content-end">
                        <form asp-action="Delete" method="post" style="display: inline;">
                            <input type="hidden" name="partitionKey" value="@customer.PartitionKey" />
                            <input type="hidden" name="rowKey" value="@customer.RowKey" />
                            <button type="submit" class="btn btn-outline-danger"
                                    style="border-radius: 8px; font-weight: 500; transition: 0.2s;"
                                    onclick="return confirm('Are you sure you want to delete this customer?');">
                                <i class="fa fa-trash me-1"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f0f0f0;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    }

    .btn-primary:hover {
        background-color: #005bb5;
    }

    .btn-outline-danger:hover {
        background-color: #f8d7da;
        color: #842029;
    }
</style>
