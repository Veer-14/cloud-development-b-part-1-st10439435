@model CLDV_POE.Models.Customer

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="max-width: 500px; width: 100%; border-radius: 12px; background-color: #f5f5f5; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;">

        <h2 class="text-center mb-4" style="font-weight: 300; color: #111;">Add New Customer</h2>

        <form asp-action="AddCustomer" method="post">
            <div class="form-group mb-3">
                <label asp-for="Customer_Name" class="form-label" style="font-weight: 500; color: #333;"></label>
                <input asp-for="Customer_Name" class="form-control animated-input" />
                <span asp-validation-for="Customer_Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="email" class="form-label" style="font-weight: 500; color: #333;"></label>
                <input asp-for="email" class="form-control animated-input" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center mb-3">
                <button type="submit" class="btn btn-primary animated-btn">
                    <i class="fa fa-save me-2"></i> Save
                </button>
            </div>
        </form>

        <!-- Back to List button -->
        <div class="text-center mt-2">
            <a asp-action="Index" class="btn btn-outline-secondary btn-back">← Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        background-color: #f0f0f0;
    }

    .animated-input {
        border-radius: 8px;
        padding: 10px;
        border: 1px solid #ccc;
        transition: all 0.3s ease;
        box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
    }

        .animated-input:focus {
            border-color: #0071e3;
            box-shadow: 0 0 8px rgba(0,113,227,0.3);
            transform: scale(1.02);
        }

    .animated-btn {
        background-color: #0071e3;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        font-weight: 500;
        font-size: 16px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
    }

        .animated-btn:hover {
            background-color: #005bb5;
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .animated-btn:active {
            transform: translateY(0) scale(0.98);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

    /* Back button styling */
    .btn-back {
        border-radius: 25px;
        padding: 8px 20px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background-color: #6c757d;
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0px 5px 12px rgba(0, 0, 0, 0.15);
        }
</style>
