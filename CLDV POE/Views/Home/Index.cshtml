@{
    ViewData["Title"] = "Home Page";
}

<div class="home-container">
    <div class="welcome-card shadow-sm p-5 rounded">
        <h1 class="display-4 mb-4" style="font-family: 'Orbitron', sans-serif;">Apple Store</h1>

        <p class="lead typing-text mb-4" id="animated-text">
            <!-- Text will appear here via JS -->
        </p>

        <div class="d-flex justify-content-center mt-4" id="nav-buttons">
            <a asp-controller="Customer" asp-action="Index" class="btn btn-primary btn-animated me-2">Customers</a>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-animated me-2">Products</a>
            <a asp-controller="Order" asp-action="Index" class="btn btn-primary btn-animated me-2">Orders</a>
            <a asp-controller="Files" asp-action="Index" class="btn btn-primary btn-animated">Files</a>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #e0e5f2 0%, #ffffff 100%);
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
    }

        /* Soft floating circles for subtle pop */
        body::before, body::after {
            content: '';
            position: absolute;
            border-radius: 50%;
            filter: blur(120px);
            opacity: 0.25;
            z-index: 0;
        }

        body::before {
            width: 300px;
            height: 300px;
            background: #0071e3;
            top: -100px;
            left: -100px;
        }

        body::after {
            width: 400px;
            height: 400px;
            background: #00c6ff;
            bottom: -150px;
            right: -150px;
        }

    .home-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 20px;
        position: relative;
        z-index: 1; /* keep content above background shapes */
    }

    .welcome-card {
        max-width: 800px;
        width: 100%;
        background-color: #ffffff;
        text-align: center;
        border-radius: 12px;
        box-shadow: 0 12px 40px rgba(0,0,0,0.15);
        padding: 40px;
        position: relative;
        z-index: 2;
    }

        .welcome-card h1 {
            font-weight: 700;
            color: #111;
            font-size: 3rem;
        }

    .lead.typing-text {
        color: #333;
        font-size: 1.2rem;
        font-weight: 500;
        min-height: 50px;
    }

    .btn-animated {
        background-color: #0071e3;
        border: none;
        padding: 12px 28px;
        border-radius: 8px;
        font-weight: 500;
        font-size: 16px;
        color: #fff;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s, opacity 0.3s;
        text-decoration: none;
        opacity: 0;
    }

        .btn-animated.show {
            opacity: 1;
        }

        .btn-animated:hover {
            background-color: #005bb5;
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .btn-animated:active {
            transform: translateY(0) scale(0.98);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .btn-animated + .btn-animated {
            margin-left: 10px;
        }
</style>


@section Scripts {
    <script>
        const text = "Explore and manage Customers, Products, Orders, and Files with a modern, interactive interface.";
        const container = document.getElementById("animated-text");
        const buttons = document.querySelectorAll("#nav-buttons .btn-animated");
        let index = 0;

        function typeText() {
            if (index < text.length) {
                container.innerHTML += text.charAt(index);
                index++;
                setTimeout(typeText, 40); // typing speed
            } else {
                fadeInButtons();
            }
        }

        function fadeInButtons() {
            buttons.forEach((btn, i) => {
                setTimeout(() => {
                    btn.classList.add("show");
                }, i * 150); // stagger fade-in
            });
        }

        window.onload = typeText;
    </script>
}
