@model CLDV_POE.Models.Product

@{
    ViewData["Title"] = "AddProduct";
}

<h1 class="text-center text-dark">Add Product</h1>


<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <!-- enctype required for file uploads -->
        <form asp-action="AddProduct" enctype="multipart/form-data" class="p-4 shadow rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ProductName" class="form-label fw-bold"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductDescription" class="form-label fw-bold"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label fw-bold"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label fw-bold">Product Image</label>
                <input type="file" name="file" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input type="submit" value="Add Product" class="btn btn-primary btn-animated" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary btn-back">← Back to List</a>
</div>

@section Scripts {
    <style>
        /* Animated button */
        .btn-animated {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .btn-animated:hover {
                transform: translateY(-3px) scale(1.05);
                box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
            }

            .btn-animated:active {
                transform: scale(0.98);
            }

        /* Back button custom styling */
        .btn-back {
            border-radius: 25px;
            padding: 8px 20px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-back:hover {
                background-color: #6c757d;
                color: #fff;
                transform: translateY(-2px);
                box-shadow: 0px 5px 12px rgba(0, 0, 0, 0.15);
            }
    </style>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}