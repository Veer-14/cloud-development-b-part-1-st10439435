@model IEnumerable<CLDV_POE.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container my-5">
    <h1 class="text-center mb-4" style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-weight: 300; color: #111;">
        Products
    </h1>

    <div class="text-center mb-4">
        <a asp-action="AddProduct" class="btn btn-primary animated-btn">
            <i class="fa fa-plus me-2"></i> Add New Product
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm product-card" style="border-radius: 12px; background-color: #f5f5f5; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;">

                    <!-- Product Image -->
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.ProductName"
                             class="card-img-top"
                             style="border-top-left-radius: 12px; border-top-right-radius: 12px; max-height: 220px; object-fit: contain; background: #fff;" />
                    }
                    else
                    {
                        <div style="height:220px; background:#e0e0e0; display:flex; align-items:center; justify-content:center; border-top-left-radius: 12px; border-top-right-radius: 12px;">
                            <i class="fa fa-image fa-3x text-muted"></i>
                        </div>
                    }

                    <!-- Product Info -->
                    <div class="card-body text-center">
                        <h5 class="card-title" style="font-weight: 500; color: #111;">
                            @product.ProductName
                        </h5>
                        <p class="card-text text-muted" style="min-height: 40px;">
                            @product.ProductDescription
                        </p>
                        <h6 style="color:#0071e3; font-weight: 600;">
                            R @product.Price
                        </h6>
                    </div>

                    <!-- Actions -->
                    <div class="card-footer bg-white border-0 d-flex justify-content-center">
                        <form asp-action="DeleteProduct" method="post" style="display: inline;">
                            <input type="hidden" name="partitionKey" value="@product.PartitionKey" />
                            <input type="hidden" name="rowKey" value="@product.RowKey" />
                            <input type="hidden" name="imageUrl" value="@product.ImageUrl" />
                            <button type="submit" class="btn btn-outline-danger"
                                    style="border-radius: 8px; font-weight: 500; transition: 0.2s;"
                                    onclick="return confirm('Are you sure you want to delete this product?');">
                                <i class="fa fa-trash me-1"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f0f0f0;
    }

    .animated-btn {
        background-color: #0071e3;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        font-weight: 500;
        font-size: 16px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
    }

        .animated-btn:hover {
            background-color: #005bb5;
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .animated-btn:active {
            transform: translateY(0) scale(0.98);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.15);
        }
</style>
