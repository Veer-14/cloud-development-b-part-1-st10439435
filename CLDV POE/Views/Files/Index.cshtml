@model List<CLDV_POE.Models.FileModel>

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="max-width: 700px; width: 100%; border-radius: 12px; background-color: #f5f5f5; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;">

        <h2 class="text-center mb-4" style="font-weight: 300; color: #111;">Files</h2>

        <!-- Display any messages -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }

        <!-- Upload form -->
        <form asp-action="UploadFile" method="post" enctype="multipart/form-data" class="mb-4">
            <div class="form-group mb-3">
                <label for="file" class="form-label fw-bold" style="color:#333;">Choose a file to upload:</label>
                <input type="file" name="file" class="form-control animated-input" />
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary animated-btn mt-2">Upload</button>
            </div>
        </form>

        <!-- Display uploaded files -->
        @if (Model != null && Model.Count > 0)
        {
            <ul class="list-group">
                @foreach (var file in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@file.Name</strong><br />
                            Size: @file.DisplaySize &nbsp;|&nbsp; Last Modified: @file.LastModified?.ToString("g")
                        </div>
                        <div>
                            <a asp-action="DownloadFile" asp-route-fileName="@file.Name" class="btn btn-outline-secondary btn-sm">Download</a>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-center mt-3">No files found or model is null.</p>
        }

        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f0f0f0;
    }

    .animated-input {
        border-radius: 8px;
        padding: 10px;
        border: 1px solid #ccc;
        transition: all 0.3s ease;
        box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
    }

        .animated-input:focus {
            border-color: #0071e3;
            box-shadow: 0 0 8px rgba(0,113,227,0.3);
            transform: scale(1.02);
        }

    .animated-btn {
        background-color: #0071e3;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        font-weight: 500;
        font-size: 16px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s, background-color 0.2s;
    }

        .animated-btn:hover {
            background-color: #005bb5;
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .animated-btn:active {
            transform: translateY(0) scale(0.98);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

    /* Back button styling */
    .btn-back {
        border-radius: 25px;
        padding: 8px 20px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background-color: #6c757d;
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0px 5px 12px rgba(0, 0, 0, 0.15);
        }

    .list-group-item {
        border-radius: 8px;
        margin-bottom: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

        .list-group-item:hover {
            background-color: #f0f0f5;
            transition: background-color 0.2s ease-in-out;
        }

    .btn-outline-secondary {
        border-radius: 8px;
        transition: all 0.2s ease;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }
</style>
