<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CLDV_POE</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CLDV_POE.styles.css" asp-append-version="true" />

    
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&display=swap" rel="stylesheet">
</head>
<body style="background-color: #f0f0f0; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Brand aligned left -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index"
                   style="font-family: 'Orbitron', sans-serif; font-size: 2.2rem; letter-spacing: 1.5px;">
                    Apple Store
                </a>

                <!-- Navbar links centered -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-animated" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-animated" asp-area="" asp-controller="Customer" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-animated" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-animated" asp-area="" asp-controller="Order" asp-action="Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-animated" asp-area="" asp-controller="Files" asp-action="Index">Files</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-animated" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted py-3 mt-4">
        <div class="container text-center">
            &copy; 2025 - Apple Store
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Optional Scripts section -->
    @RenderSection("Scripts", required: false)

    <style>
        /* Animated navbar links */
        .nav-animated {
            position: relative;
            transition: transform 0.2s ease, color 0.2s ease;
        }

            .nav-animated:hover {
                color: #0071e3;
                transform: scale(1.05);
            }

        /* Subtle background animation on hover for navbar */
        .navbar-nav .nav-link::after {
            content: '';
            display: block;
            height: 2px;
            background: #0071e3;
            transition: width 0.3s;
            width: 0;
            margin-top: 4px;
        }

        .navbar-nav .nav-link:hover::after {
            width: 100%;
        }
    </style>
</body>
</html>
